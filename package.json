{
  "name": "bd-eye",
  "version": "0.1.0",
  "description": "Visual issue tracker with kanban board and dependency graph",
  "private": true,
  "type": "module",
  "author": "Daniel Chicot",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Applicative-Works/bd-eye.git"
  },
  "bugs": {
    "url": "https://github.com/Applicative-Works/bd-eye/issues"
  },
  "homepage": "https://github.com/Applicative-Works/bd-eye#readme",
  "keywords": [
    "issue-tracking",
    "kanban",
    "beads",
    "visualization",
    "dependency-graph"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"node --watch src/server/index.js\" \"vite\"",
    "dev:server": "node --watch src/server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "start": "node src/server/index.js",
    "lint": "eslint src/",
    "format": "prettier --write 'src/**/*.{js,jsx,css}'",
    "check": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@preact/signals": "^2.0.0",
    "better-sqlite3": "^11.0.0",
    "chokidar": "^4.0.0",
    "hono": "^4.0.0",
    "mysql2": "^3.17.1",
    "preact": "^10.25.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.9.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.0"
  }
}
